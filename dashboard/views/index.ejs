<%- include('partials/header', { title: 'Home - Discord Bot' }) %>
<%- include('partials/navbar', { user: user, activeTab: 'home' }) %>

<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">The Ultimate Discord Bot</h1>
        <p class="lead mb-4">Enhance your Discord server with powerful features, moderation, and entertainment</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="<%= botInviteURL %>" class="btn btn-light btn-lg">
                <i class="bi bi-plus-circle"></i> Add Bot
            </a>
            <% if (user) { %>
                <a href="/dashboard" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-speedometer2"></i> Open Dashboard
                </a>
            <% } else { %>
                <a href="/auth/discord" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-discord"></i> Login
                </a>
            <% } %>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Features</h2>
        <div class="row g-4">
            <% const features = [
                { icon: 'bi-shield-check', color: 'primary', title: 'Moderation', desc: 'Advanced moderation tools with auto-mod, warning system and logs.' },
                { icon: 'bi-music-note-beamed', color: 'success', title: 'Music', desc: 'High-quality music from YouTube, Spotify and other platforms.' },
                { icon: 'bi-emoji-smile', color: 'warning', title: 'Fun & Games', desc: 'Games, memes, and entertainment for your community.' },
                { icon: 'bi-gear', color: 'info', title: 'Customizable', desc: 'Fully customizable settings via web dashboard.' },
                { icon: 'bi-lightning', color: 'danger', title: 'Fast', desc: 'Optimized for performance with minimal latency.' },
                { icon: 'bi-clock', color: 'secondary', title: '24/7 Online', desc: 'Reliable uptime with professional hosting.' }
            ] %>
            <% features.forEach(feature => { %>
                <div class="col-md-4">
                    <div class="card feature-card h-100">
                        <div class="card-body text-center">
                            <i class="bi <%= feature.icon %> text-<%= feature.color %> fs-1 mb-3"></i>
                            <h5 class="card-title"><%= feature.title %></h5>
                            <p class="card-text"><%= feature.desc %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<%- include('partials/footer', { botInviteURL: botInviteURL }) %>