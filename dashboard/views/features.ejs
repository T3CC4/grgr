<!-- dashboard/views/features.ejs -->
<%- include('partials/header', { title: 'Features - Omnia Bot' }) %>
<%- include('partials/navbar', { user: user, activeTab: 'features' }) %>

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Powerful Features</h1>
                <p class="lead mb-4">Everything you need to manage and enhance your Discord server, all in one comprehensive bot.</p>
                <% if (!user) { %>
                    <a href="/auth/discord" class="btn btn-light btn-lg">
                        <i class="bi bi-discord"></i> Get Started
                    </a>
                <% } else { %>
                    <a href="/dashboard" class="btn btn-light btn-lg">
                        <i class="bi bi-speedometer2"></i> Go to Dashboard
                    </a>
                <% } %>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="bi bi-infinity display-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Moderation Features -->
<section class="py-5">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h2 class="display-5 fw-bold text-danger mb-4">
                    <i class="bi bi-shield-check"></i> Advanced Moderation
                </h2>
                <p class="lead text-muted mb-4">Keep your server safe and organized with our comprehensive moderation toolkit.</p>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-hammer text-danger me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Automated Actions</h6>
                                <small class="text-muted">Auto-ban, auto-kick, auto-mute</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-exclamation-triangle text-warning me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Warning System</h6>
                                <small class="text-muted">Track and manage user warnings</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-shield-lock text-primary me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Raid Protection</h6>
                                <small class="text-muted">Automatic raid detection & prevention</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-file-text text-info me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Audit Logs</h6>
                                <small class="text-muted">Comprehensive action logging</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">
                        <h6 class="text-muted mb-3">Moderation Commands</h6>
                        <div class="bg-dark text-light p-3 rounded">
                            <div class="mb-2"><code>/ban @user reason: Spamming</code></div>
                            <div class="mb-2"><code>/kick @user reason: Breaking rules</code></div>
                            <div class="mb-2"><code>/warn @user reason: Inappropriate language</code></div>
                            <div class="mb-2"><code>/clear amount: 50</code></div>
                            <div class="text-success">✅ All actions logged automatically</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Music Features -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <h2 class="display-5 fw-bold text-success mb-4">
                    <i class="bi bi-music-note-beamed"></i> Premium Music
                </h2>
                <p class="lead text-muted mb-4">High-quality music streaming with support for multiple platforms and advanced controls.</p>
                
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-speaker text-success me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Crystal Clear Audio</h6>
                                <small class="text-muted">384kbps high-quality streaming</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-youtube text-danger me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Multiple Sources</h6>
                                <small class="text-muted">YouTube, Spotify, SoundCloud</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-list-ol text-primary me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Queue Management</h6>
                                <small class="text-muted">Advanced playlist controls</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex">
                            <i class="bi bi-volume-up text-warning me-3 fs-4"></i>
                            <div>
                                <h6 class="fw-bold">Audio Controls</h6>
                                <small class="text-muted">Volume, bass boost, filters</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-lg-1">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">
                        <h6 class="text-muted mb-3">Music Player Interface</h6>
                        <div class="bg-dark text-light p-4 rounded">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-success rounded me-3" style="width: 50px; height: 50px;"></div>
                                <div>
                                    <div class="fw-bold">Now Playing</div>
                                    <small class="text-muted">Song Title - Artist Name</small>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center gap-3 mb-3">
                                <button class="btn btn-outline-light btn-sm">⏮️</button>
                                <button class="btn btn-outline-light btn-sm">⏸️</button>
                                <button class="btn btn-outline-light btn-sm">⏭️</button>
                            </div>
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar bg-success" style="width: 45%"></div>
                            </div>
                            <div class="d-flex justify-content-between small">
                                <span>1:23</span>
                                <span>3:45</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Utility & Fun Features -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5">
                <h2 class="display-6 fw-bold text-primary mb-4">
                    <i class="bi bi-tools"></i> Utility Tools
                </h2>
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex">
                            <i class="bi bi-info-circle text-primary me-3 fs-5"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Server & User Info</h6>
                                <small class="text-muted">Detailed information about servers and users</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex">
                            <i class="bi bi-stopwatch text-success me-3 fs-5"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Ping & Performance</h6>
                                <small class="text-muted">Real-time latency and performance monitoring</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex">
                            <i class="bi bi-person-plus text-warning me-3 fs-5"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Auto-Role System</h6>
                                <small class="text-muted">Automatic role assignment for new members</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 mb-5">
                <h2 class="display-6 fw-bold text-warning mb-4">
                    <i class="bi bi-emoji-smile"></i> Entertainment
                </h2>
                <div class="list-group list-group-flush">
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex">
                            <i class="bi bi-dice-6 text-warning me-3 fs-5"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Games & Fun</h6>
                                <small class="text-muted">Dice rolls, coin flips, 8-ball, and more</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex">
                            <i class="bi bi-image text-danger me-3 fs-5"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Memes & Images</h6>
                                <small class="text-muted">Random memes and image generation</small>
                            </div>
                        </div>
                    </div>
                    <div class="list-group-item border-0 px-0">
                        <div class="d-flex">
                            <i class="bi bi-code-slash text-info me-3 fs-5"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Custom Commands</h6>
                                <small class="text-muted">Create your own server-specific commands</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Dashboard Features -->
<section class="py-5 bg-primary text-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-4">Web Dashboard</h2>
            <p class="lead">Manage everything through our intuitive web interface</p>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-gear-fill display-4 mb-3 opacity-75"></i>
                    <h5>Easy Configuration</h5>
                    <p class="mb-0">Configure all bot settings without any commands</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-graph-up display-4 mb-3 opacity-75"></i>
                    <h5>Real-time Analytics</h5>
                    <p class="mb-0">Monitor your server's activity and growth</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="bi bi-headset display-4 mb-3 opacity-75"></i>
                    <h5>24/7 Support</h5>
                    <p class="mb-0">Get help through our integrated ticket system</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-light">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-4">Ready to get started?</h2>
        <p class="lead text-muted mb-4">Join thousands of servers already using Omnia Bot</p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a href="<%= typeof botInviteURL !== 'undefined' ? botInviteURL : '#' %>" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Add to Server
            </a>
            <% if (!user) { %>
                <a href="/auth/discord" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-discord"></i> Login to Configure
                </a>
            <% } else { %>
                <a href="/dashboard" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-speedometer2"></i> Open Dashboard
                </a>
            <% } %>
        </div>
    </div>
</section>

<%- include('partials/footer') %>