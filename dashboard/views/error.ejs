<%- include('partials/header', { title: 'Error - Omnia Bot' }) %>
<%- include('partials/navbar', { user: user || null }) %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">Oops! Something went wrong</h4>
                    <p class="text-muted"><%= typeof error !== 'undefined' ? error : 'An unexpected error occurred' %></p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="bi bi-house"></i> Home
                        </a>
                        <% if (typeof user !== 'undefined' && user) { %>
                            <a href="/dashboard" class="btn btn-outline-primary">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>