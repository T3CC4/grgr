<div class="card">
    <div class="card-header">
        <h5><i class="bi bi-gear"></i> General Settings</h5>
    </div>
    <div class="card-body">
        <form id="generalForm" data-config-form>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="prefix" name="prefix"
                               value="<%= config.prefix %>" placeholder="Bot Prefix" maxlength="5">
                        <label for="prefix">Bot Prefix</label>
                        <div class="form-text">The prefix used for text commands (if enabled)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-3">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="musicEnabled" name="musicEnabled"
                                   <%= config.musicEnabled ? 'checked' : '' %>>
                            <label class="form-check-label" for="musicEnabled">
                                <i class="bi bi-music-note"></i> Music Module
                            </label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="moderationEnabled" name="moderationEnabled"
                                   <%= config.moderationEnabled ? 'checked' : '' %>>
                            <label class="form-check-label" for="moderationEnabled">
                                <i class="bi bi-shield"></i> Moderation Module
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Settings
            </button>
        </form>
    </div>
</div>