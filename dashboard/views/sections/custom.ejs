<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-code-slash"></i> Custom Commands</h5>
        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addCustomCommandModal">
            <i class="bi bi-plus"></i> Add Command
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Command</th>
                        <th>Response</th>
                        <th>Created By</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="customCommandsList">
                    <tr>
                        <td colspan="4" class="text-center text-muted">Loading custom commands...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal for adding custom command -->
<div class="modal fade" id="addCustomCommandModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Custom Command</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addCustomCommandForm">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="customCommandName" required>
                        <label>Command Name (without prefix)</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="customCommandResponse" style="height: 100px" required></textarea>
                        <label>Response</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="addCustomCommand()">Add Command</button>
            </div>
        </div>
    </div>
</div>