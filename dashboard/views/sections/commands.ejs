<div class="card">
    <div class="card-header">
        <h5><i class="bi bi-terminal"></i> Command Management</h5>
    </div>
    <div class="card-body">
        <p class="text-muted mb-4">Enable or disable specific commands for your server.</p>
        
        <div class="row">
            <div class="col-md-3">
                <div class="list-group" id="commandCategories">
                    <button class="list-group-item list-group-item-action active" data-category="all">
                        All Commands
                    </button>
                    <% const categories = [...new Set(commands.map(c => c.category))]; %>
                    <% categories.forEach(category => { %>
                        <button class="list-group-item list-group-item-action" data-category="<%= category %>">
                            <%= category.charAt(0).toUpperCase() + category.slice(1) %>
                        </button>
                    <% }) %>
                </div>
            </div>
            <div class="col-md-9">
                <div class="input-group mb-3">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="commandSearch" placeholder="Search commands...">
                </div>
                
                <div id="commandsList">
                    <% commands.forEach(command => { %>
                        <div class="command-item" data-category="<%= command.category %>" data-name="<%= command.name %>">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">/<%= command.name %></h6>
                                    <p class="text-muted mb-0 small"><%= command.description %></p>
                                    <span class="badge bg-secondary"><%= command.category %></span>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input command-toggle" type="checkbox" 
                                           data-command="<%= command.name %>" checked>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>