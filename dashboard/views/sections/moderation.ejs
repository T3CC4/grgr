<div class="card">
    <div class="card-header">
        <h5><i class="bi bi-shield"></i> Moderation Settings</h5>
    </div>
    <div class="card-body">
        <form id="moderationForm" data-config-form>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <select class="form-select channel-select" id="modLogChannel" name="modLogChannel">
                            <option value="">Disabled</option>
                        </select>
                        <label for="modLogChannel">Moderation Log Channel</label>
                        <div class="form-text">All moderation actions will be logged here</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mt-3">
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" id="autoModEnabled" name="autoModEnabled">
                            <label class="form-check-label" for="autoModEnabled">
                                Enable Auto-Moderation
                            </label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" id="antiSpam" name="antiSpam">
                            <label class="form-check-label" for="antiSpam">
                                Anti-Spam Protection
                            </label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="antiLinks" name="antiLinks">
                            <label class="form-check-label" for="antiLinks">
                                Block External Links
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            
            <h6 class="mt-4 mb-3">Warning System</h6>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="warnKickThreshold" name="warnKickThreshold"
                               value="3" min="1" max="10">
                        <label for="warnKickThreshold">Warnings before Kick</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating mb-3">
                        <input type="number" class="form-control" id="warnBanThreshold" name="warnBanThreshold"
                               value="5" min="1" max="10">
                        <label for="warnBanThreshold">Warnings before Ban</label>
                    </div>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Settings
            </button>
        </form>
    </div>
</div>